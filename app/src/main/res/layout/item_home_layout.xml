<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="164dp"
        android:layout_height="228dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_8dp"
        android:background="@color/white"
        android:elevation="@dimen/_2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_home_image"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_margin="@dimen/_4dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_image" />

        <TextView
            android:id="@+id/tv_item_home_soldout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sold Out"
            android:background="@color/red"
            android:textColor="@color/black"
            android:padding="@dimen/margin_8"
            android:textSize="@dimen/_14font"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_4"/>

        <TextView
            android:id="@+id/tv_item_home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:paddingStart="@dimen/_4dp"
            android:paddingEnd="@dimen/_4dp"
            android:text="Product Name"
            android:textColor="@color/logoGrey"
            android:textSize="@dimen/_14font"
            android:layout_below="@id/iv_item_home_image"
            android:layout_above="@id/tv_item_home_price"/>

        <TextView
            android:id="@+id/tv_item_home_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_4dp"
            android:paddingEnd="@dimen/_4dp"
            android:gravity="center"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_16font"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>