<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ChangePassword">

    <include layout="@layout/title_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_18">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:paddingStart="@dimen/margin_8"
                android:text="New Password"
                android:textColor="@color/themeBlue"
                android:textSize="@dimen/_16font" />

            <EditText
                android:id="@+id/et_cp_new_password"
                style="@style/EditTextNormalStyle"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="@dimen/margin_12"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:paddingStart="@dimen/margin_8"
                android:text="Confirm New Password"
                android:textColor="@color/themeBlue"
                android:textSize="@dimen/_16font" />

            <EditText
                android:id="@+id/et_cp_confirm_password"
                style="@style/EditTextNormalStyle"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="@dimen/margin_12"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btn_cp_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_background"
                android:elevation="@dimen/_2dp"
                android:gravity="center"
                android:layout_margin="@dimen/margin_18"
                android:text="Update Password"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_18font"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>