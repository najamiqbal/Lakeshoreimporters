<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/transparentGrey"
    android:padding="@dimen/_12dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textSize="@dimen/_24font"
        android:padding="@dimen/_18dp"
        android:fontFamily="@font/blackjack"
        android:gravity="center"
        android:background="@color/logoGrey"
        android:textColor="@color/white"
        android:text="Welcome Test Account"/>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/black"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="@dimen/_6dp"
        android:layout_marginRight="44dp"
        android:layout_gravity="center_horizontal">

    </View>

    <LinearLayout
        android:id="@+id/layout_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_4dp"
        android:visibility="visible"
        android:padding="@dimen/margin_12">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16font"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="@dimen/_12dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="Profile Info"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"

            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_next"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_my_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_4dp"
        android:visibility="visible"
        android:padding="@dimen/margin_12">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16font"
            android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
            android:drawablePadding="@dimen/_12dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="Order History"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"

            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_next"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/black"
        android:visibility="gone"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_gravity="center_horizontal">

    </View>

    <LinearLayout
        android:id="@+id/layout_address_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_4dp"
        android:padding="@dimen/margin_12">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16font"
            android:drawableLeft="@drawable/ic_add_location_black_24dp"
            android:drawablePadding="@dimen/_12dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="Address Book"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_next"/>

    </LinearLayout>

